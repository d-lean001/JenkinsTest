{
  "compilerOptions": {
    "module": "ES6",
    "outDir": "./dist",
    "rootDir": "packages",
    "jsx": "react",
    "emitDeclarationOnly": true,
    "declaration": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "es6",
    "types": ["react", "jest"],
    "lib": ["es2017", "dom"],
    "baseUrl": "./",
    "paths": {
      "@hodrobond/*": [
        "packages/*"
       ],
    }
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "dist/**",
    "__tests__"
  ]
}
